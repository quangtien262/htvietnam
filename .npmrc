# Optimize npm package installation
engine-strict=true
save-exact=true
package-lock=true

# Reduce memory usage during install
maxsockets=1
fetch-retries=2
fetch-retry-factor=10
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Cache settings
cache-min=999999999

# Production optimizations
production=false
optional=true
dev=true

# Logging
loglevel=error
progress=false
